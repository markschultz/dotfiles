(add-to-list 'custom-theme-load-path "~/.emacs.d/solarized/")
(load-theme 'solarized t)
(evil-mode 1)
(yas-global-mode 1)
(add-hook 'text-mode-hook 'flyspell-mode)
(ido-mode 1)
(ido-everywhere 1)
(ido-ubiquitous-mode 1)
(setq ido-enable-flex-matching t)
(flx-ido-mode 1)
